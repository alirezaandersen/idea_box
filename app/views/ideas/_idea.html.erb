<li class="list-group-item list-group-item-info">
  Title: <%= idea.title %><br>

  <span class="bodyline">Body: <%= idea.body %></span><br>
  <span class="qualityline">Quality: <%= idea.quality %></span><br>

  <%= link_to '#', remote:true do %>
  <span class="glyphicon glyphicon-thumbs-up"></span>
  <% end  %>

  <%= link_to '#', remote:true do  %>
  <span class="glyphicon glyphicon-thumbs-down"></span>
  <% end  %>

  <span class="edit">
    <%= link_to edit_idea_path(idea), remote: true do %>
      <button class="btn btn-primary btn-xs">Edit</button>
    <% end %>

    <%= link_to idea, remote: true, method: :delete,  data: { confirm: 'Are you sure?' } do %>
      <button>Delete!</button>
    <% end %>
  </span>
</li>
