
<div class="row">

  <div class="col-md-5 col-md-offset-1">
    <h2>Ideas</h2>
    <input type="text" name="search" id="search">
  </div>

  <div class="col-md-2 col-md-offset-4">
    <%= link_to new_idea_path, remote: true do %>
      <button class="btn btn-default">New</button>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-2" id="idea-form" style="display:none;"></div>
</div>

<div class="row">
  <div class="col-md-7 col-md-offset-1" id="ideas"><%= render @ideas %></div>
</div>
